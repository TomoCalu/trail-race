{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["**/*.{js,mjs,cjs,jsx}"]
    }
  ],
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}